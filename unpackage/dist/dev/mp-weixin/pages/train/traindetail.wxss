
.tab-title {
  width: 750rpx;
  height: 80rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx 0 #e9e9e9;
  margin-bottom: 4rpx;
}
.tab-title .tab {
  width: 375rpx;
  height: 80rpx;
  display: -webkit-inline-box;
  display: -webkit-inline-flex;
  display: inline-flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  box-sizing: border-box;
  color: #666666;
  position: relative;
}
.tab-title .select {
  color: #d0021b;
  font-weight: 700;
}
.tab-title .select::after {
  position: absolute;
  content: '';
  width: 100rpx;
  height: 6rpx;
  background-color: #d0021b;
  bottom: 0;
  left: 50%;
  -webkit-transform: translateX(-50%);
  transform: translateX(-50%);
}
.imgList {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  min-height: 260rpx;
  min-width: 750rpx;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  padding: 37.5rpx 0 0 37.5rpx;
  box-sizing: border-box;
  background-color: #FFFFFF;
}
.imgsize {
  width: 200rpx;
  height: 200rpx;
  background-color: #d8d8d8;
  border-radius: 6rpx;
  margin: 0 37.5rpx 37.5rpx 0;
}
.remarks-title {
  height: 107rpx;
  line-height: 107rpx;
  font-weight: bold;
  width: 750rpx;
  font-size: 32rpx;
  color: #666666;
  padding-left: 30rpx;
  box-sizing: border-box;
}
.remarks-content {
  min-height: 80rpx;
  width: 750rpx;
  background-color: #FFFFFF;
  padding: 30rpx;
  box-sizing: border-box;
}
.remarks-content text {
  font-size: 28rpx;
  line-height: 44rpx;
  color: #666666;
}
.graces-mask {
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  z-index: 1;
}
.graces-banner {
  width: 90%;
  padding: 15rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  background: #FFF;
  border-radius: 12rpx;
  z-index: 99;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  overflow: hidden;
}